<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

 <bean id="emp" class="com.capgemini.springcore.beans.EmployeeBean" autowire="byType">
   		<property name="empId" value="103"></property>
   		<property name="name" value="Bhaskar"></property>
   		<property name="age" value="25"></property>
   </bean>
   
   <bean id="dept" class="com.capgemini.springcore.beans.DepartmentBean" autowire-candidate="false">
   		<property name="deptId" value="903"></property>
   		<property name="deptName" value="Development"></property>
   </bean>
   <bean id="department" class="com.capgemini.springcore.beans.DepartmentBean" autowire-candidate="false">
   		<property name="deptId" value="904"></property>
   		<property name="deptName" value="Tester"></property>
   </bean>
   <bean id="departmentBean" class="com.capgemini.springcore.beans.DepartmentBean">
   		<property name="deptId" value="905"></property>
   		<property name="deptName" value="Software"></property>
   </bean>
</beans>