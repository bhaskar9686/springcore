<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id = "pet2" class = "com.capgemini.springcore.beans.Pet2" autowire="constructor">
	<constructor-arg name= "name" value="Puppy"></constructor-arg>
	</bean>
	<bean id = "dog" class = "com.capgemini.springcore.beans.Dog" primary="true"></bean>
	<bean id = "lion" class = "com.capgemini.springcore.beans.Lion"></bean>
</beans>